{% extends 'base.html.twig' %}

{% block title %}Арифметический тест!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Пройдите тест на знание арифметики! ✅</h1>
    <p>{{ quiz.name }}</p>
    <p>Вам предстоит ответить на 10 вопросов. Удачи!</p>

    {# <form method="POST" action="{{ path('submit_form') }}">
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        <button type="submit">Submit</button>

        {{ form_end(form) }}
    </form> #}

    {% for question in quiz.questions %}
        <h3>{{ question.content }}</h3>
        <ul>
            {% for answer in question.answers %}
                <li>
                    <input type="checkbox" id="answer_{{ answer.id }}" name="answers[{{ question.id }}]" value="{{ answer.id }}">
                    <label for="answer_{{ answer.id }}">{{ answer.content }}</label>
                </li>
            {% endfor %}
        </ul>
    {% endfor %}
    <button type="submit">Submit</button>
    {# <form method="POST" action="{{ path('submit_form') }}">
    </form> #}
</div>
{% endblock %}
